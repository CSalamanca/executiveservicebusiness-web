# Configuraci贸n Nginx HTTP temporal para Executive Service Business
# Proxy reverso sin SSL - para configuraci贸n inicial
# Generado autom谩ticamente por Ansible

# Configuraci贸n HTTP para Corporativa (proxy a puerto 3000)
server {
    listen 80;
    server_name {{ corporativa_domain }};
    
    # Logs espec铆ficos
    access_log /var/log/nginx/corporativa-access.log;
    error_log /var/log/nginx/corporativa-error.log;
    
    # Headers de seguridad b谩sicos
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    
    # Proxy a la aplicaci贸n React en puerto 3000
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_buffering off;
        
        # Timeouts para aplicaciones React
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    # WebSocket support para React Hot Reload (desarrollo)
    location /sockjs-node {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

