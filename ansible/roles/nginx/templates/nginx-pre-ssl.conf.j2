# Configuración temporal de Nginx para validación SSL
# Solo HTTP, antes de obtener certificados Let's Encrypt

# Servidor para Corporativa (archivos estáticos)
server {
    listen 80;
    server_name {{ corporativa_domain }};
    
    root /var/www/html/corporativa;
    index index.html index.htm;
    
    # Logs específicos
    access_log /var/log/nginx/corporativa-access.log;
    error_log /var/log/nginx/corporativa-error.log;
    
    # Configuración para SPA (Single Page Application)
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # Archivos estáticos con cache
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
    
    # Permitir acceso a archivos .well-known para validación Let's Encrypt
    location /.well-known/acme-challenge/ {
        root /var/www/html;
        allow all;
    }
}

