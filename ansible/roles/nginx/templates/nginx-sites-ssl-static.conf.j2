# Configuraci√≥n Nginx para Executive Service Business
# SSL/TLS configurado para aplicaciones React est√°ticas
# Generado autom√°ticamente por Ansible

# Redirecci√≥n de HTTP a HTTPS para todos los dominios
server {
    listen 80;
    server_name {{ corporativa_domain }} {{ eyenga_domain }};
    
    # Permitir acceso a archivos .well-known para renovaci√≥n de certificados
    location /.well-known/acme-challenge/ {
        root /var/www/html;
        allow all;
    }
    
    # Redireccionar todo lo dem√°s a HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# Configuraci√≥n HTTPS para Corporativa (archivos est√°ticos)
server {
    listen 443 ssl http2;
    server_name {{ corporativa_domain }};
    
    # Configuraci√≥n SSL
    ssl_certificate /etc/letsencrypt/live/{{ corporativa_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ corporativa_domain }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    
    # Logs espec√≠ficos
    access_log /var/log/nginx/corporativa-access.log;
    error_log /var/log/nginx/corporativa-error.log;
    
    # Headers de seguridad
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: https:;" always;
    
    # Configuraci√≥n para aplicaci√≥n React est√°tica
    root /var/www/html/corporativa;
    index index.html index.htm;
    
    # Configuraci√≥n para SPA (Single Page Application)
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # Archivos est√°ticos con cache optimizado
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header Vary Accept-Encoding;
    }
    
    # Compresi√≥n gzip
    location ~* \.(js|css|html|xml|txt)$ {
        gzip on;
        gzip_vary on;
        gzip_min_length 1024;
        gzip_comp_level 6;
        gzip_types
            text/plain
            text/css
            text/xml
            text/javascript
            application/javascript
            application/xml+rss
            application/json;
    }
}

