# Configuraci√≥n Nginx para Executive Service Business
# Proxy reverso con SSL/TLS para aplicaciones React
# Generado autom√°ticamente por Ansible

# Redirecci√≥n de HTTP a HTTPS para todos los dominios
server {
    listen 80;
    server_name {{ corporativa_domain }} {{ eyenga_domain }};
    return 301 https://$server_name$request_uri;
}

# Configuraci√≥n HTTPS para Corporativa (proxy a puerto 3000)
server {
    listen 443 ssl http2;
    server_name {{ corporativa_domain }};
    
    # Configuraci√≥n SSL
    ssl_certificate /etc/letsencrypt/live/{{ corporativa_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ corporativa_domain }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    
    # Logs espec√≠ficos
    access_log /var/log/nginx/corporativa-access.log;
    error_log /var/log/nginx/corporativa-error.log;
    
    # Headers de seguridad
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: https:;" always;
    
    # Proxy a la aplicaci√≥n React en puerto 3000
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_buffering off;
        
        # Timeouts para aplicaciones React
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    # WebSocket support para React Hot Reload (desarrollo)
    location /sockjs-node {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

