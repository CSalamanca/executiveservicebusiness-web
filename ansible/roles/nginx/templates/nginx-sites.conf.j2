server_tokens off;

# Rate limiting para protecci√≥n DDoS
limit_req_zone $binary_remote_addr zone=login:10m rate=10r/m;
limit_req_zone $binary_remote_addr zone=global:10m rate=30r/m;

# Configuraci√≥n de buffers
